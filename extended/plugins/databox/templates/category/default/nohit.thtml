{# begin {templatelocation} #}

<div>

  <ul class="uk-breadcrumb">
    <li><a href="{site_url}/">{home}</a></li>
    <li>{category_top}</li>
  </ul>

  <h1 class="uk-h1">{category_name}</h1>

    <a href="#db_category_nohit_{category_code}" class="uk-button uk-button-small" data-uk-modal>Theme variables</a>

