{# begin {templatelocation} #}

{lang_static_sort_help}
<form name="staticsort" method="post" action="{s_form_action}" class="uk-form">
<div>
  <table class="uk-table uk-table-condensed uk-table-striped uk-width-1-1" style="background:#ffffff;">
    <tr>
      <th colspan="2" style="width:100%;">
        {lang_sort_options}
      </th>
    </tr>
    <tr>
      <td class="mg_alignright" style="width:50%;">{lang_media_capture_time}</td>
      <td>
        <input type="radio" name="sortyby" value="0"{xhtml}>
      </td>
    </tr>
    <tr>
      <td class="mg_alignright" style="width:50%;">{lang_media_upload_time}</td>
      <td>
        <input type="radio" name="sortyby" value="1"{xhtml}>
      </td>
    </tr>
    <tr>
      <td class="mg_alignright" style="width:50%;">{lang_media_title}</td>
      <td>
        <input type="radio" name="sortyby" value="2"{xhtml}>
      </td>
    </tr>
    <tr>
      <td class="mg_alignright" style="width:50%;">{lang_media_filename}</td>
      <td>
        <input type="radio" name="sortyby" value="3"{xhtml}>
      </td>
    </tr>
    <tr>
      <td class="mg_alignright" style="width:50%;">{lang_rating}</td>
      <td>
        <input type="radio" name="sortyby" value="4"{xhtml}>
      </td>
    </tr>
    <tr>
      <th colspan="2">
        {lang_order_options}
      </th>
    </tr>
    <tr>
      <td class="mg_alignright" style="width:50%;">{lang_ascending}</td>
      <td>
        <input type="radio" name="sortorder" value="0"{xhtml}>
      </td>
    </tr>
    <tr>
      <td class="mg_alignright" style="width:50%;">{lang_descending}</td>
      <td>
        <input type="radio" name="sortorder" value="1"{xhtml}>
      </td>
    </tr>
  </table>
</div>
<div class="mg_submit_center">
  <input type="hidden" name="action" value="staticsort"{xhtml}>
  <input type="hidden" name="album_id" value="{album_id}"{xhtml}>
  <input type="submit" name="mode" value="{lang_save}"{xhtml}>
  <input type="submit" name="mode" value="{lang_cancel}"{xhtml}>
</div>
</form>

{# end {templatelocation} #}
